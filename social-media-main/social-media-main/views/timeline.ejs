  <h1 class="text-center text-5xl font-extrabold text-blue-500 drop-shadow-2xl">Timeline</h1>

<!-- PROFILE content -->


<div class="rounded-xl w-[80%] pt-[2%]  m-auto flex flex-wrap">

 
  <!-- cards  -->

  <% user.posts.forEach((post)=> { %>
  <!--  -->
  <div class="card w-[23%] mr-5 mb-5">
      <div class="flex items-center mb-2">
          <img class="w-[7vh] h-[7vh] rounded-full  cursor-pointer object-cover"
              src="/images/<%= user.profileimage %>"
              alt="">
          <div class="ml-3 ">
              <h1 class="text-xl font-bold "><%= user.name %></h1>
              <small class="text-zinc-600"> <%= post.createdAt.toLocaleTimeString()%> |
                <%= post.createdAt.toLocaleDateString() %></small>
          </div>
      </div>
      <img class="w-full h-[40vh] rounded-xl  cursor-pointer object-cover"
          src="/images/<%= post.media %>"
          alt="">


          <div class="flex justify-between  mt-1">

      <div class="text-xl flex gap-x-2">

        <span class=" text-blue-500">
            <%= post.likes.length  %>
        </span>

        <a href="/likes/<%= post._id %>">
        <% if(post.likes.includes(user._id)){%>


            <i class="ri-heart-3-fill cursor-pointer text-red-500"></i>
        <% }else{ %>
            <i class="ri-heart-3-line cursor-pointer text-red-500"></i>
       
       <% } %>

    </a>
        
          <!-- <i class="ri-chat-3-line cursor-pointer text-blue-500"></i> -->
      </div> 
      <div>
      <a href="/delete-post/<%= post._id %>"><i class="ri-delete-bin-2-line text-green-500 text-xl "></i></a>
      <a href="/update-post/<%= post._id %>"><i class="text-blue-500 text-xl ri-edit-box-line"></i></a>
    </div>
    </div>
  </div>
  <% }) %>
